<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/titelValue"
    android:layout_centerHorizontal="true"
    android:text=""
    android:layout_below="@id/my_toolbar2"
    android:textSize="10pt"
    />

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:layout_below="@id/titelValue"
    android:id="@+id/streepje"
    android:background="@android:color/darker_gray" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/streepje"
    >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inschrijven"
        android:id="@+id/inschrijvingBtn"
        android:onClick="inschrijvingWedstrijd"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uitchrijvingBtn"
        android:layout_toRightOf="@id/inschrijvingBtn"
        android:layout_alignBaseline="@id/inschrijvingBtn"
        android:text="uitschrijven"
        android:onClick="uitschrijvingWedstrijd"

        />
</RelativeLayout>

</RelativeLayout>
