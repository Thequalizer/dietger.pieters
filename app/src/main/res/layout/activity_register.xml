<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dietgerpieters.werkstuk.Activities.RegisterActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_input_register"
        android:name="dietgerpieters.werkstuk.Fragments.RegisterInputFragment"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_input_preview"
        android:layout_below="@id/fragment_input_register"
        android:name="dietgerpieters.werkstuk.Fragments.PreviewRegisterInputFragment"
        />

</RelativeLayout>
